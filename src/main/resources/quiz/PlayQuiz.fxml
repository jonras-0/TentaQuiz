<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quiz.PlayQuizController">
   <top>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="Meny">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#resetQuiz" text="Starta om quiz" />
                    <MenuItem mnemonicParsing="false" onAction="#exitQuiz" text="Avsluta" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="HjÃ¤lp">
                  <items>
                      <Menu mnemonicParsing="false" text="Fuska">
                           <items>
                              <CheckMenuItem fx:id="showCorrectAlternativesCheatCheckMenuItem" mnemonicParsing="false" onAction="#enableOrDisableAlternativesCheat" text="Visa korrekta svar" />
                           </items>
                      </Menu>
                    <MenuItem mnemonicParsing="false" onAction="#showInfoAbout" text="Om" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <top>
                  <Label fx:id="titleLabel" text="Titel" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </top>
               <center>
                  <TextArea fx:id="questionTextArea" editable="false" focusTraversable="false" pickOnBounds="false" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </BorderPane.margin></TextArea>
               </center>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </BorderPane>
         </center>
      </BorderPane>
   </top>
   <center>
      <BorderPane fx:id="alternativesBorderPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <bottom>
            <Button defaultButton="true" mnemonicParsing="false" onAction="#answerQuestion" prefWidth="100.0" text="OK" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Times New Roman" size="18.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="20.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
